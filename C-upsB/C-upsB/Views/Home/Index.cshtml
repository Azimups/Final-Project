@using C_upsB.ViewModels
@{
    HomeViewModel homeViewModel = Model;
    ViewData["Title"] = "Home Page";
}
    <section id="intro">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-12 test">
                    <div class="title">
                        <h1>@homeViewModel.Stylish.FirstHeader<br>@homeViewModel.Stylish.SecondHeader</h1>
                        <h2>@homeViewModel.Stylish.ThirdHeader</h2>
                    </div>
                    <div class="image">
                        <img src="~/images/@homeViewModel.Stylish.Image" alt="intro-img">
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="video" data-aos="fade-left" class="aos-init aos-animate">
                     <img src="~/images/coffee-cup.webp" alt="">
                    </div>
                    <ul class="links">
                        <li>
                            <a href="">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <i class="fab fa-twitter"></i>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </li>
                        <li>
                            <a href="">
                                <i class="fab fa-github"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    <section id="about">
        <div class="container reveal">
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <div class="about-images">
                        <img  class="chef-img" src="~/images/@homeViewModel.AboutImages.AboutMainImage" alt="coffe">
                        <img class="coffe-img" src="~/images/@homeViewModel.AboutImages.AboutLittleImage" alt="chef">
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="about-title">
                        <span>@homeViewModel.AboutTexts.PreHeader</span>
                        <h2>@homeViewModel.AboutTexts.MainHeader</h2>
                        <p>@homeViewModel.AboutTexts.AboutTextFirst</p>
                        <p>@homeViewModel.AboutTexts.AboutTextSecond</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="menu">
        <div class="container reveal">
            <div class="row">
                {
                    <div class="header-text">
                        <h2>WHAT WE LOVE</h2>
                    </div>
           
                @foreach (var item in homeViewModel.Categories)
                {
                    <div class="col-lg-4 col-md-12">
                        <a href="">
                            <div class="category">
                                <img src="~/images/@item.Image" alt="product">
                                <h2>@item.Name</h2>
                            </div>
                        </a>
                    </div>
                }
                 <div class="see-full-menu">
                    <a asp-controller="Category" asp-action="Index">
                        See Full Menu
                    </a>
                </div>
            </div>
        </div>
    </section>
    <section id="location">
        <div class="container reveal">
            <div class="row">
                <div class="col-lg-6 col-md-12">
                    <div class="location-text">
                        <h2>Locations</h2>
                        <p>C-ups has 5 branches, four are located in Baku and one is located in Azerbaijan.</p>
                        <a asp-controller="Location" asp-action="Index">
                            All Locations
                            <i aria-hidden="true" class="fas fa-long-arrow-alt-right"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12">
                    <div class="location-image">
                        <div class="image">
                            <img src="~/images/dutch_bros_coffee_sacramento-770x360.jpeg" alt="location image">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="blog">
        <div class="container reveal">
            <div class="row">
                <div class="col-lg-8">
                    <div class="blog-header">
                        <span>News & Blog</span>
                        <h2>Latest news & Blog</h2>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="learn-more">
                        <a href="">
                            learn more
                        </a>
                    </div>
                </div>
                </div>
            <div class="row">
                @foreach (var blog in homeViewModel.Blogs)
                {
                    <div class="col-lg-4 col-md-12">
                        <div class="blog-item">
                            <div class="blog-image">
                                <img src="~/images/@blog.Image" alt="">
                            </div>
                            <div class="blog-title">
                                <p>@Html.Raw(blog.Name)</p>
                                <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">
                                    <h3>@blog.Questions</h3>
                                </a>
                                <div class="read-more">
                                    <a asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">
                                        read more
                                        <i class="fa fa-long-arrow-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </section>
    <section id="merchandise">
        <div class="container reveal">
            <div class="row">
                <div class="header-text">
                    <h2>Merchandise</h2>
                </div>
                @foreach (var item in homeViewModel.Merchandises)
                {
                    <div class="col-lg-4 col-md-12">
                        <a asp-controller="Merchandise" asp-action="Detail" asp-route-id="@item.Id">
                            <div class="category">
                                <img src="~/images/@item.Image" alt="product">
                                <h2>@item.Name</h2>
                            </div>
                        </a>
                    </div>
                }
                <div class="see-full-menu">
                    <a asp-controller="Merchandise" asp-action="Index">
                        see full menu
                    </a>
                </div>
            </div>
        </div>
    </section>
<style>
#blog .container .row .blog-item .blog-image img{
    width: 100% !important;
}
</style>
