@model List<Location>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<section id="location-detail">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 scroll col-md-12">
                <ul class="location-list">
                    @foreach (var location in Model)
                    {
                        <li class="location-item">
                            <p class="nickname">@location.LocationName</p>
                            <p class="address">@location.LocationAddress</p>
                            <p class="hours"><span>@location.LocationHours</span></p>
                            <div class="item-detail">
                                <a class="detail-link" href="/location-detail.html">Details</a>
                                <a class="direction-link" href="">Directions</a>
                            </div>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="map">
                    <div class="marker mapboxgl-marker mapboxgl-marker-anchor-center" style="transform: translate(-50%, -50%) translate(358px, 709px) rotateX(0deg) rotateZ(0deg);"></div>
                    <div class="marker mapboxgl-marker mapboxgl-marker-anchor-center" style="transform: translate(10%, 100%) translate(208px, 309px) rotateX(0deg) rotateZ(0deg);"></div>
                    <div class="marker mapboxgl-marker mapboxgl-marker-anchor-center" style="transform: translate(50%, 100%) translate(50px, 329px) rotateX(0deg) rotateZ(0deg);"></div>
                    <div class="marker mapboxgl-marker mapboxgl-marker-anchor-center" style="transform: translate(10%, 2%) translate(318px, 309px) rotateX(0deg) rotateZ(0deg);"></div>
                    <div class="marker mapboxgl-marker mapboxgl-marker-anchor-center" style="transform: translate(10%, 2%) translate(220px, 308px) rotateX(0deg) rotateZ(0deg);"></div>
                    <div class="marker mapboxgl-marker mapboxgl-marker-anchor-center" style="transform: translate(10%, 2%) translate(28px, 209px) rotateX(0deg) rotateZ(0deg);"></div>
                    <div class="marker mapboxgl-marker mapboxgl-marker-anchor-center" style="transform: translate(10%, 2%) translate(38px, 39px) rotateX(0deg) rotateZ(0deg);"></div>
                    <iframe src="https://www.google.com/maps/embed?pb=!1m19!1m8!1m3!1d24303.851608770863!2d49.854475288793935!3d40.409261699999995!3m2!1i1024!2i768!4f13.1!4m8!3e6!4m0!4m5!1s0x40307d6bd6211cf9%3A0x343f6b5e7ae56c6b!2sBaku!3m2!1d40.409261699999995!2d49.8670924!5e0!3m2!1sen!2s!4v1641823213229!5m2!1sen!2s" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" frameborder="0"></iframe>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    .row{
        width: 100%;
    }
    .location-item{
        max-height: 40%;
    }
</style>
