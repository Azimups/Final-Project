@model Merchandise

@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-lg-3">
        <div class="card mb-4 py-3 border-left-primary">
            <div class="card-body">
                <img src="~/images/@Model.Image" class="img-fluid" alt="">
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="card mb-4 py-3 border-left-primary">
            <div class="card-body">
                @Model.Name
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="card mb-4 py-3 border-left-primary">
            <div class="card-body">
                @Model.Price
            </div>
        </div>
    </div>
</div>
