@model List<Category>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>title</h2>
  
@{
    ViewBag.Title = "title";
    Layout = "_AdminLayout";
}
  
<h2>Categories</h2>
<a class="btn btn-primary" asp-controller="CategoryCrud" asp-action="Create">Create</a>
<div class="row">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                <tr>
                    <th>Category Name</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        @* <td> <img src="~/images/@item.Image" alt="product" width="100px" height="100px"></td> *@
                        <td>
                            <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a>
                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            <a class="btn btn-success" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
<style>
      .img-fluid{
          max-width: 400px;
          max-height: 300px;
      }
  </style>
