@model List<C_upsB.ViewModels.BasketViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
@{
    double TotalPrice = 0;
    int TotalCount = 0;
    foreach (var product in Model)
    {
        TotalPrice += product.Count * product.Price;
        TotalCount += product.Count;
    }
}
<section id="cart-wrapper">
        <div class="container">
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-12">
                        <div class="cart-header">
                        <h1>Cart</h1>
                        <div class="cont-shopping">
                            <a href="/menu.html">
                                Continue shopping
                            </a>
                        </div>
                    </div>
                    <form action="">
                        <div class="cart-item-headers">
                            <div class="cart-item-quantity">Quantity</div>
                            <div class="cart-item-price">Price</div>
                        </div>
                        <div class="cart-items">
                            <div class="cart-item">
                                <div class="cart-item-image">
                                    <a href="">
                                        <img src="~/images/@item.Image" alt="">
                                    </a>
                                </div>
                                <div class="cart-item-detail">
                                    <div class="cart-item-name">
                                        <p>@Html.Raw(item.Name)</p>
                                    </div>
                                    <div class="cart-item-quantity">
                                        <input type="text">
                                        <button type=button>
                                            <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-minus" viewBox="0 0 20 20"><path fill="#444" d="M17.543 11.029H2.1A1.032 1.032 0 0 1 1.071 10c0-.566.463-1.029 1.029-1.029h15.443c.566 0 1.029.463 1.029 1.029 0 .566-.463 1.029-1.029 1.029z"></path></svg>
                                        </button>
                                        <button type=button class="quantity-plus">
                                            <svg aria-hidden="true" focusable="false" role="presentation" class="icon icon-plus" viewBox="0 0 20 20"><path fill="#444" d="M17.409 8.929h-6.695V2.258c0-.566-.506-1.029-1.071-1.029s-1.071.463-1.071 1.029v6.671H1.967C1.401 8.929.938 9.435.938 10s.463 1.071 1.029 1.071h6.605V17.7c0 .566.506 1.029 1.071 1.029s1.071-.463 1.071-1.029v-6.629h6.695c.566 0 1.029-.506 1.029-1.071s-.463-1.071-1.029-1.071z"></path></svg>
                                        </button>
                                    </div>
                                    <div class="cart-item-price">
                                        <span class="cart__price">$ @item.Price</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12">
                                <div class="cart-checkout d-flex">
                                    <div class="col-lg-6 col-md-12">
                                        <div class="cart-footer">
                                            <div class="order-note">
                                                <label for="CartNote">Order note</label>
                                                <input type="text">
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-md-12">
                                        <div class="cart-item-sub">
                                            <div class="cart-subtotal">Subtotal</div>
                                            <div>$ @TotalPrice</div>
                                        </div>
                                        <div class="cart-checkout-btn">
                                            <button type=submit>
                                                Check out
                                            </button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>

                }
            </div>
        </div>
    </section>
